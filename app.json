{
  "expo": {
    "name": "Loupe",
    "slug": "loupe",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./src/assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2A6CBF"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.yourcompany.loupe",
      "infoPlist": {
        "NSCameraUsageDescription": "Loupe needs access to your camera to capture medical reports for analysis.",
        "NSPhotoLibraryUsageDescription": "Loupe needs access to your media library to save and access medical reports.",
        "NSPhotoLibraryAddUsageDescription": "Loupe needs access to save photos to your media library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/adaptive-icon.png",
        "backgroundColor": "#2A6CBF"
      },
      "package": "com.yourcompany.loupe",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION"
      ]
    },
    "web": {
      "favicon": "./src/assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Loupe needs access to your camera to capture medical reports for analysis."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Loupe needs access to your media library to save and access medical reports.",
          "savePhotosPermission": "Loupe needs access to save photos to your media library.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "expo-dev-client",
        {
          "launchMode": "most-recent"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "b9e035a4-7ef3-476b-bf34-7d391761ba65"
      }
    }
  }
}
